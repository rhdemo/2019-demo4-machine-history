{
  "swagger" : "2.0",
  "info" : {
    "title" : "Machine History",
    "version" : "1.0.0"
  },
  "paths" : {
    "/machines" : {
      "get" : {
        "summary" : "Gets a list of all machines",
        "operationId" : "getAllMachines",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "The list of machine ID's",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Machine"
              }
            }
          }
        }
      }
    },
    "/machines/{id}" : {
      "get" : {
        "summary" : "Gets the machine state",
        "operationId" : "get",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "The current machine state",
            "schema" : {
              "$ref" : "#/definitions/MachineState"
            }
          }
        }
      },
      "parameters" : [ {
        "name" : "id",
        "in" : "path",
        "description" : "The machine id",
        "required" : true,
        "type" : "integer",
        "format" : "int64"
      } ]
    },
    "/machines/records/{id}" : {
      "get" : {
        "summary" : "Gets all machine maintenance",
        "description" : "Returns all maintenance records for the machine, in descending order",
        "operationId" : "getHistory",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "The maintenance data",
            "schema" : {
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/MaintenanceData"
              }
            }
          }
        }
      },
      "post" : {
        "summary" : "Creates a maintenance record",
        "operationId" : "createRecord",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "body",
          "in" : "body",
          "required" : true,
          "schema" : {
            "$ref" : "#/definitions/MaintenanceData"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "The ID of the created record",
            "schema" : {
              "type" : "integer"
            }
          }
        }
      },
      "parameters" : [ {
        "name" : "id",
        "in" : "path",
        "required" : true,
        "type" : "integer",
        "format" : "int64"
      } ]
    }
  },
  "definitions" : {
    "MachineState" : {
      "description" : "The representation of the current state of a machine",
      "required" : [ "id", "name", "health" ],
      "type" : "object",
      "properties" : {
        "id" : {
          "format" : "int64",
          "description" : "The machine ID",
          "type" : "integer"
        },
        "name" : {
          "description" : "The machine name",
          "type" : "string"
        },
        "health" : {
          "format" : "int64",
          "description" : "The machine health",
          "type" : "integer"
        }
      }
    },
    "Machine" : {
      "description" : "A Machine",
      "required" : [ "id", "name" ],
      "type" : "object",
      "properties" : {
        "id" : {
          "format" : "int64",
          "description" : "The Machine ID",
          "type" : "integer"
        },
        "name" : {
          "description" : "The machine name",
          "type" : "string"
        }
      }
    },
    "MaintenanceData" : {
      "description" : "A record of maintenance performed on a machine",
      "required" : [ "time", "mechanic", "startingHealth", "finalHealth" ],
      "type" : "object",
      "properties" : {
        "time" : {
          "format" : "int64",
          "description" : "The time of the maintenance in unix epoch format",
          "type" : "integer"
        },
        "mechanic" : {
          "description" : "The mechanic name",
          "type" : "string"
        },
        "startingHealth" : {
          "description" : "The starting health of the machine",
          "type" : "integer"
        },
        "finalHealth" : {
          "description" : "The health of the machine after the maintenance",
          "type" : "integer"
        },
        "Notes" : {
          "description" : "The maintenance notes",
          "type" : "string"
        }
      }
    }
  }
}